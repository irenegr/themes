#based on Color Me Bad
# Window geometry
padding.width: 1
padding.height: 1
border.width: 0
osd.border.width: 1
window.client.padding.width: 0
window.client.padding.height: 2
window.handle.width: 0

#Menu geometry
menu.border.width: 0
menu.overlap: -2

# Border colors
window.active.border.color:  #FD9301
window.inactive.border.color:  #246799
menu.border.color:  #FD9301
osd.border.color: #FD9301
window.active.client.color: #FD9301
window.inactive.client.color: #246799

# Text shadows
window.active.label.text.font: shadow=n
window.inactive.label.text.font: shadow=n
menu.items.font: shadow=n
menu.title.text.font: shadow=n

# Window title justification
window.label.text.justify: Left

# Active window
window.active.title.bg: flat solid
window.active.title.bg.color: #222222

window.active.label.bg: Parentrelative
window.active.label.text.color: #dedede

window.active.handle.bg: flat solid
window.active.handle.bg.color: #222222

window.active.grip.bg: flat solid
window.active.grip.bg.color: #222222

window.active.button.unpressed.bg: parentrelative
window.active.button.unpressed.image.color: #FD9301

window.active.button.pressed.bg: parentrelative
window.active.button.pressed.image.color: #FD9301

window.active.button.disabled.bg: parentrelative
window.active.button.disabled.image.color: #CCCCCC

window.active.button.hover.bg: parentrelative
window.active.button.hover.image.color: #dedede

window.active.button.toggled.unpressed.bg: parentrelative
window.active.button.toggled.unpressed.image.color: #CCCCCC

window.active.button.toggled.pressed.bg: parentrelative
window.active.button.toggled.pressed.image.color: #FD9301

window.active.button.toggled.hover.bg: parentrelative
window.active.button.toggled.hover.image.color: #dedede

# Inactive windows
window.inactive.title.bg: flat solid
window.inactive.title.bg.color: #222222

window.inactive.label.bg: Parentrelative
window.inactive.label.text.color: #CCCCCC

window.inactive.handle.bg: flat solid
window.inactive.handle.bg.color: #222222 

window.inactive.grip.bg: flat solid
window.inactive.grip.bg.color: #222222

window.inactive.button.unpressed.bg: parentrelative
window.inactive.button.unpressed.image.color:  #246799

window.inactive.button.pressed.bg: parentrelative
window.inactive.button.pressed.image.color: #246799

window.inactive.button.disabled.bg: parentrelative
window.inactive.button.disabled.image.color: #CCCCCC

window.inactive.button.hover.bg: parentrelative
window.inactive.button.hover.image.color: #dedede

window.inactive.button.toggled.unpressed.bg: parentrelative
window.inactive.button.toggled.unpressed.image.color: #CCCCCC

window.inactive.button.toggled.pressed.bg: parentrelative
window.inactive.button.toggled.pressed.image.color: #246799

window.inactive.button.toggled.hover.bg: parentrelative
window.inactive.button.toggled.hover.image.color: #CCCCCC

# Menus
menu.title.bg: flat solid
menu.title.bg.color: #222222
menu.title.text.color:  #246799
menu.title.text.justify: Center

menu.items.bg: Flat solid
menu.items.bg.color: #222222
menu.items.text.color:  #CCCCCC
menu.items.disabled.text.color: #CACACA

menu.items.active.bg: Flat solid
menu.items.active.bg.color: #222222
menu.items.active.text.color: #FD9301
menu.items.active.disabled.text.color: #CACACA

#OSD
osd.bg: flat solid
osd.bg.color: #222222

osd.label.bg: parentrelative
osd.label.text.color: #dedede

osd.hilight.bg: flat solid bevel1
osd.hilight.bg.color: #d6156c

osd.unhilight.bg: flat solid
osd.unhilight.bg.color: #333333
